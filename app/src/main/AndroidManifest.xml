<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thibsc.giftlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_gift"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_gift_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.thibsc.giftlist.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.thibsc.giftlist.CreateListActivity">
        </activity>
        <activity android:name="com.thibsc.giftlist.CreateGiftActivity">
        </activity>
        <activity android:name="com.thibsc.giftlist.SelectGiftActivity">
        </activity>
        <activity android:name="com.thibsc.giftlist.SignInActivity"
            android:noHistory="true">
            <!-- Leave if backpressed -->
        </activity>
    </application>

</manifest>